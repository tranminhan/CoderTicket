<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
      <ul class="nav nav-sidebar">
        <li class="active"><a href="#">My Events <span class="sr-only">(current)</span></a></li>
        <li><%= link_to "Create Event", new_dashboard_event_path %></li>
        <li><a href="#">Published</a></li>
        <li><a href="#">Draft</a></li>
      </ul>
    </div>

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <% if @event.errors.any? %>
        <div id="error_explanation">
          Please review following <%= pluralize(@event.errors.count, "error") %>.
          <ul>
          <% @event.errors.full_messages.each do |m| %>
            <li><%= m %></li>
          <% end %>
        </ul>
        </div>
      <% end %>

      <h2>Create New Event</h2>
      <div class="table-responsive">
        <%= form_for @event do |f| %>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control", placeholder: "Event name"  %>
          </div>
          <div class="form-group">
            <%= f.date_field :starts_at, class: "form-control", placeholder: "Starts at" %>
          </div>
          <div class="form-group">
            <%= f.collection_select :venue_id, Venue.all, :id, :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.collection_select :category_id, Category.all, :id, :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.text_field :hero_image_url, class: "form-control", placeholder: "Hero image url" %>
          </div>
          <div class="form-group">
            <%= f.text_area :extended_html_description, class: "form-control", placeholder: "Event description", size: "24x6" %>
          </div>
          <button type="submit" class="btn btn-default btn-warning">Submit</button>
        <% end %>
      </div>
    </div>
  </div>
</div>