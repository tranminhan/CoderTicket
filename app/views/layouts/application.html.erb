<!DOCTYPE html>
<html>
<head>
  <title>CsTemplate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


  <nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
    <a class="navbar-brand" href="<%= root_path %>">Coder Ticket</a>
    <ul class="nav navbar-nav">

    <% if signed_in? %>
      <li class="nav-item">
        <%= link_to "Sign out", session_path, method: :delete, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Dashboard", admin_events_path, class: "nav-link" %>
      </li>
    <% else %>
      <li class="nav-item">
        <%= link_to "Sign in", signin_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Sign up", signup_path, class: "nav-link"  %>
      </li>
    <% end %>

    </ul>
  </nav>  

  <%= yield %>

</body>
</html>
