<div class="signup"> 
  <%= form_for @user, :html => { :class => 'form-signin' } do |form| %>
    <h2 class="form-signin-heading text-center">Please sign up</h2>
    
    <% if @user.errors.any? %>
      Please review <%= pluralize(@user.errors.count, "error") %> below:
      <ul>
        <% @user.errors.full_messages.each do |error_message| %>
          <li><%= error_message %></li>
        <% end %>
      </ul>
    <% end %>

    <div>
      <%= form.label :name, class: "sr-only" %>
      <%= form.text_field :name, class: "form-control", placeholder: "Name" %>
    </div>
    <div>
      <%= form.label :email, class: "sr-only" %>
      <%= form.email_field :email, class: "form-control", placeholder: "Email address" %>
    </div>
    <div>
      <%= form.label :password, class: "sr-only"  %>
      <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>
    <div>
      <%= form.submit "Sign up", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>