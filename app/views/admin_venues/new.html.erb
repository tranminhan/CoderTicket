<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
      <%= render 'shared/admin_navbar' %>
    </div>

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <% if @venue.errors.any? %>
        <div id="error_explanation">
          Please review following <%= pluralize(@venue.errors.count, "error") %>.
          <ul>
          <% @venue.errors.full_messages.each do |m| %>
            <li><%= m %></li>
          <% end %>
        </ul>
        </div>
      <% end %>

      <h2>Create New Venue</h2>
      <div class="table-responsive">
        <%= form_for @venue, url: admin_venues_path do |f| %>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control", placeholder: "name"  %>
          </div>
          <div class="form-group">
            <%= f.text_field :full_address, class: "form-control", placeholder: "full address" %>
          </div>
          <div class="form-group">
            <%= f.collection_select :region_id, Region.all, :id, :name, class: "form-control" %>
          </div>
          <button type="submit" class="btn btn-default btn-warning">Submit</button>
        <% end %>
      </div>
    </div>
  </div>
</div>